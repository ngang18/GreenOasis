@model ModelClasses.ViewModel.LoginVM

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="@Url.Content("~/greenoasisassets/images/breadcrumb/bg/1-1-1919x388.jpg")">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Trang Đăng Nhập</h2>
                        <ul>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li>Đăng nhập</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Modal -->
    <div class="login-modal">
        <div class="login-dialog">
            <div class="login-content">
                <button type="button" class="btn-close" aria-label="Close">
                    &times;
                </button>

                <!-- Login Form -->
                <div class="login-body">
                    <div class="login-box">
                        <h2 class="login-title">Đăng nhập</h2>
                        <form asp-action="Login" method="post" asp-controller="Account" asp-route-returnUrl="@ViewData["returnUrl"]">
                            <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
                            <div class="form-group">
                                <input asp-for="Email" placeholder="Nhập Email" class="form-control" value="@ViewBag.RememberMeEmail" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" placeholder="Nhập Mật Khẩu" class="form-control" value="@ViewBag.RememberMePassword" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <p class="link" href="#" data-bs-toggle="modal"
                                   data-bs-target="#forgot-password-modal" data-bs-dismiss="modal">
                                    Quên mật
                                    khẩu ?
                                </p>
                            </div>

                            <div class="form-group">
                                <button class="btn-submit" type="submit">
                                    <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                                </button>
                            </div>
                        </form>

                        <p class="login-or">Hoặc</p>

                        <div class="social-login">
                            <button type="button" class="btn-social btn-facebook">
                                <i class="fab fa-facebook-f me-2"></i> Tiếp tục với Facebook
                            </button>
                            <form asp-controller="ExternalAuth" asp-action="ExternalLogin" method="get" >
                                <input type="hidden" name="provider" value="Google" />
                                <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
                                <button type="submit" class="btn btn-social btn-google">
                                    <i class="fab fa-google me-2"></i> Tiếp tục với Google
                                </button>
                            </form>
                        </div>

                        <p class="login-register">
                            Chưa có tài khoản Green Oasis?
                            <a asp-action="Register">Đăng ký</a>
                        </p>
                    </div>
                </div>
                <!-- Login Form End -->
            </div>
        </div>
    </div>
    <!-- Login Modal End -->
    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgot-password-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4 rounded-4">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3"
                        data-bs-dismiss="modal" aria-label="Close"></button>

                <!-- Forgot Password Form -->
                <div class="modal-body">
                    <h2 class="text-center mb-3">Đặt Lại Mật Khẩu</h2>
                    <p class="text-center text-muted mb-4">Nhập email đăng ký tài khoản của bạn</p>

                    <form id="forgotPasswordForm" method="post">
                        <div class="mb-3">
                            <input asp-for="Email" type="email" class="form-control rounded-pill px-4" id="forgotEmail" required
                                   placeholder="Nhập Email">
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-submit" type="submit">Gửi liên kết</button>
                        </div>
                    </form>

                    <p class="text-center mt-4">
                        Quay lại <a class="login-back" href="#">Trang Đăng Nhập</a>
                    </p>
                </div>
                <!-- Forgot Password Form End -->
            </div>
        </div>
    </div>
    <!--form end-->
</main>
<!-- Main Content Area End Here -->



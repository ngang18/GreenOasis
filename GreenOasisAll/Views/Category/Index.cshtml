@model IEnumerable<ModelClasses.Category>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="PaddingAll">
    <div class="row m-3">
        <div class="col-lg-7 col-md-5 col-sm-12">
            <h2 class="text-primary">Category List</h2>
            <hr />
        </div>
        <div class="col-lg-5 col-md-5 col-sm-12">
            <a asp-action="Upsert" asp-controller="Category" class="btn btn-primary form-control">Create Category</a>
        </div>
    </div>

    <div class="PaddingAllWhite">
        <div class="row">
            <div class="col">
                @if (Model.Count() > 0)
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th asp-for="Id">ID</th>
                            <th asp-for="Name">Name</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-12 pb-2">
                                            <a asp-action="Upsert" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary form-control">Edit</a>
                                        </div>
                                        <div class="col-lg-7 col-md-5 col-sm-12">
                                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger form-control">Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>



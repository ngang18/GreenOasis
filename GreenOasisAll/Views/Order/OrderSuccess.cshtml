@{
    Layout = null;
}
@if (User.IsInRole("Admin"))
{
    <div class="d-flex justify-content-center align-items-center vh-100" style="background-size: cover; background-repeat: no-repeat; background-attachment: fixed; background-position: center; ">

        <div class="row">
            <div class="col-12">
                <h1 class="text-warning text-center fw-bold">
                    Order number # <strong class="text-warning badge-danger">@ViewBag.OrderId</strong>
                    <a asp-action="Index" asp-controller="Home" class="text-white">Keep shopping</a>
                </h1>
            </div>
            <div class="col-12 text-center">
                <img src="~/images/ordersuccess.jpg" class="rounded-2 img-fluid" />
            </div>
        </div>
    </div>
}
else
{
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <title>Đặt Hàng Thành Công</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                padding: 40px;
                text-align: center;
                background-color: #f3fff3;
                color: #2b7a2b;
            }

            h1 {
                font-size: 32px;
            }

            p {
                font-size: 18px;
            }

            .home-button {
                margin-top: 30px;
                display: inline-block;
                padding: 12px 24px;
                font-size: 16px;
                color: #fff;
                background-color: #2b7a2b;
                text-decoration: none;
                border-radius: 6px;
                transition: background-color 0.3s ease;
            }

                .home-button:hover {
                    background-color: #256923;
                }
        </style>
    </head>
    <body>
        <h1>🎉 Cảm ơn bạn đã mua hàng tại Green Oasis!</h1>
        <p>Đơn hàng của bạn sẽ được xử lý trong vòng 48 giờ.</p>
        <a asp-controller="Home" asp-action="Index" class="home-button">Tiếp tục mua sắm</a>
    </body>
    </html>

}

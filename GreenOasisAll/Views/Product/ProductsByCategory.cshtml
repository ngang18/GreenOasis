@model ModelClasses.ViewModel.HomePageVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="@Url.Content("~/greenoasisassets/images/breadcrumb/bg/1-1-1919x388.jpg")">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Sản Phẩm</h2>
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                            <li>@Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.Name</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="shop-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <!-- Sidebar Danh Mục -->
                <div class="col-xl-3 col-lg-4 order-2 order-lg-1 pt-5 pt-lg-0">
                    <div class="sidebar-area">
                        <div class="widgets-area">
                            <div class="widgets-item pt-0">
                                <h2 class="widgets-title mb-4">Loại Sản Phẩm</h2>
                                @if (Model.Categories.Any())
                                {
                                    <ul class="widgets-category">
                                        @foreach (var cat in Model.Categories)
                                        {
                                            var count = Model.AllProducts.Count(p => p.CategoryId == cat.Id);
                                            <li>
                                                <a href="@Url.Action("ProductsByCategory", "Product", new { categoryId = cat.Id })">
                                                    <i class="fa fa-chevron-right"></i>
                                                    @cat.Name <span>(@count)</span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }

                                @* @if (Model.Categories.Count() > 0)
                                {
                                    <ul class="widgets-category">
                                        @foreach (var cat in Model.Categories)
                                        {
                                            var productCount = Model.ProductList.Count(p => p.CategoryId == cat.Id);
                                            <li>
                                                <a href="@Url.Action("ProductsByCategory", "Product", new { categoryId = cat.Id })">
                                                    <i class="fa fa-chevron-right"></i>
                                                    @cat.Name <span>(@productCount)</span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                } *@
                            </div>
                            <div class="widgets-item widgets-filter">
                                <h2 class="widgets-title mb-4">Lọc giá</h2>
                                <div class="price-filter">
                                    <input type="text" class="pronia-range-slider" name="pronia-range-slider" value="" data-type="double" data-min="0" data-from="0" data-to="100000" data-max="150000" data-grid="false" />
                                </div>
                            </div>
                        </div>
                        <div class="banner-item widgets-banner img-hover-effect">
                            <div class="banner-img">
                                <img src="~/greenoasisassets/images/banner/1-2-370x300.jpg" alt="Banner Image">
                            </div>
                            <div class="banner-content text-position-center">
                                <span class="collection">Bộ Sưu Tập Mới</span>
                                <h3 class="title">Chậu Sứ</h3>
                                <div class="button-wrap">
                                    <a class="btn btn-custom-size sm-size btn-pronia-primary" href="#">Mua Ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Danh sách sản phẩm -->
                @if (Model.ProductList.Any())
                {
                    <div class="col-xl-9 col-lg-8 order-1 order-lg-2">
                        <div class="product-topbar">
                            <ul>
                                <li class="page-count">
                                    <span>@Model.ProductList.Count()</span> sản phẩm tìm thấy trong <span>@Model.TotalProductCount</span>
                                </li>
                                <li class="short">
                                    <label for="sort-select">Sắp xếp:</label>
                                    <select id="sort-select" class="nice-select">
                                        <option value="1">Sản Phẩm Nổi Bật</option>
                                        <option value="2">Bán Chạy Nhất</option>
                                        <option value="3">Mới Nhất</option>
                                        <option value="4">Giá: Tăng Dần</option>
                                        <option value="5">Giá: Giảm Dần</option>
                                    </select>
                                </li>
                            </ul>
                        </div>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="grid-view" role="tabpanel" aria-labelledby="grid-view-tab">
                                <div class="product-grid-view row g-y-20">
                                    @foreach (var item in Model.ProductList)
                                    {
                                        <div class="col-md-4 col-sm-6">
                                            <div class="product-item">
                                                <div class="product-img">
                                                    <a asp-action="SingleProduct" asp-controller="Home" asp-route-id="@item.Id">
                                                        <img class="primary-img" src="~/images/@item.HomeImgUrl" alt="@item.Name" />
                                                        <img class="secondary-img" src="~/images/@item.HomeImgUrl" alt="@item.Name" />
                                                    </a>
                                                    <div class="product-add-action">
                                                        <ul>
                                                            <li>
                                                                <a asp-controller="Wishlist" asp-action="AddToWishlist" asp-route-productId="@item.Id"
                                                                   data-tippy="Add to wishlist" data-tippy-inertia="true"
                                                                   data-tippy-animation="shift-away" data-tippy-delay="50"
                                                                   data-tippy-arrow="true" data-tippy-theme="sharpborder">
                                                                    <i class="pe-7s-like"></i>
                                                                </a>
                                                            </li>
                                                            <li class="quuickview-btn" data-bs-toggle="modal" data-bs-target="#quickModal">
                                                                <a href="#" data-tippy="Quickview" data-tippy-inertia="true"
                                                                   data-tippy-animation="shift-away" data-tippy-delay="50"
                                                                   data-tippy-arrow="true" data-tippy-theme="sharpborder">
                                                                    <i class="pe-7s-look"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@item.Id"
                                                                   data-tippy="Add to cart" data-tippy-inertia="true"
                                                                   data-tippy-animation="shift-away" data-tippy-delay="50"
                                                                   data-tippy-arrow="true" data-tippy-theme="sharpborder">
                                                                    <i class="pe-7s-cart"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="product-content">
                                                    <a class="product-name" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a>
                                                    <div class="price-box pb-1">
                                                        <span class="new-price">@item.Price.ToString("N0")₫</span>
                                                    </div>
                                                    <div class="rating-box">
                                                        <ul>
                                                            @for (int star = 0; star < 5; star++)
                                                            {
                                                                <li><i class="fa fa-star"></i></li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="pagination-area">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next">&raquo;</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                }
                else
                {

                    <div class="col-xl-9 col-lg-8 order-1 order-lg-2">
                        <div class="product-topbar">
                            <ul>
                                <li class="page-count">
                                    <span>@Model.ProductList.Count()</span> sản phẩm tìm thấy trong <span>@Model.TotalProductCount</span>
                                </li>
                                <li class="short">
                                    <label for="sort-select">Sắp xếp:</label>
                                    <select id="sort-select" class="nice-select">
                                        <option value="1">Sản Phẩm Nổi Bật</option>
                                        <option value="2">Bán Chạy Nhất</option>
                                        <option value="3">Mới Nhất</option>
                                        <option value="4">Giá: Tăng Dần</option>
                                        <option value="5">Giá: Giảm Dần</option>
                                    </select>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane fade show active centered-message" id="grid-view" role="tabpanel" aria-labelledby="grid-view-tab">
                                <div><i>Không có sản phẩm nào trong danh mục này.</i></div>
                            </div>
                        </div>
                        
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@model ModelClasses.ViewModel.WishlistIndexVM
@if (User.IsInRole("Admin"))
{ }
else
{
    <!-- Begin Main Content Area -->
    <main class="main-content">
        <div class="breadcrumb-area breadcrumb-height" data-bg-image="@Url.Content("~/greenoasisassets/images/breadcrumb/bg/1-1-1919x388.jpg")">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-lg-12">
                        <div class="breadcrumb-item">
                            <h2 class="breadcrumb-heading">Trang danh sách yêu thích</h2>
                            <ul>
                                <li>
                                    <a href="index.html">Trang chủ</a>
                                </li>
                                <li>Danh sách yêu thích</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="wishlist-area section-space-y-axis-100">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        @if (Model.productList.Count() > 0)
                        {
                            <form action="javascript:void(0)">
                                <div class="table-content table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="product_remove">Xóa</th>
                                                <th class="product-thumbnail">Ảnh</th>
                                                <th class="cart-product-name">Sản Phẩm</th>
                                                <th class="product-price">Giá</th>
                                                <th class="product-stock-status">Tình trạng hàng</th>
                                                <th class="cart_btn">Thêm vào giỏ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var bit in Model.productList)
                                            {
                                                <tr>
                                                    <td class="product_remove">
                                                        <a asp-action="RemoveWishlist" asp-controller="Wishlist" asp-route-productId="@bit.ProductId">
                                                            <i class="pe-7s-close" data-tippy="Remove" data-tippy-inertia="true"
                                                               data-tippy-animation="shift-away" data-tippy-delay="50"
                                                               data-tippy-arrow="true" data-tippy-theme="sharpborder"></i>
                                                        </a>
                                                    </td>
                                                    <td class="product-thumbnail">
                                                        <a asp-action="Details" asp-controller="Home" asp-route-id="@bit.product.Id">
                                                            <img src="~/Images/@bit.product.HomeImgUrl" width="112" height="124" alt="@bit.product.Name" />
                                                        </a>
                                                    </td>
                                                    <td class="product-name"><a asp-action="Details" asp-controller="Home" asp-route-id="@bit.product.Id">@bit.product.Name</a></td>
                                                    <td class="product-price"><span class="amount">@bit.product.Price₫</span></td>
                                                    <td class="product-stock-status">
                                                        <span class="in-stock">@bit.Quantity
                                                        </span>

                                                    </td>

                                                    <td class="cart_btn"><a asp-action="AddToCart" asp-controller="Cart">thêm vào giỏ</a></td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        }
                        else
                        {
                            <h3 class="text-warning text-center">Wishlist trống, hãy thêm sản phẩm vào!</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Main Content Area End Here -->
}
